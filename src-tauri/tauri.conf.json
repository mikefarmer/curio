{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Curio",
  "version": "1.0.0",
  "identifier": "com.curio.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Curio",
        "width": 900,
        "height": 700,
        "minWidth": 400,
        "minHeight": 300,
        "devtools": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "fileAssociations": [
      {
        "ext": [
          "md",
          "markdown",
          "mdown",
          "mkd",
          "mkdown"
        ],
        "name": "Markdown Document",
        "role": "Viewer"
      }
    ]
  }
}
